<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <LangVersion>9.0</LangVersion>
    <Nullable>enable</Nullable>
    <Authors>Duncan Roosma</Authors>
    <Description>Stubbing with the purpose to stub HttpClient communication to a external dependency</Description>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Title>HttpClient.Stub</Title>
    <PackageId>HttpClient.Stub</PackageId>
    <PackageTags>Testing;Stubbing;IHttpClientBuilder</PackageTags>
    <PackageProjectUrl>https://github.com/droosma/HttpClient.Stub</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RootNamespace>HttpClient.Stub</RootNamespace>
    <AssemblyName>HttpClient.Stub</AssemblyName>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="5.0.1" />
  </ItemGroup>

</Project>
